{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2021",
    "types": ["node", "jest", "@testing-library/jest-dom"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "sh/**/*.ts"],
  "exclude": ["node_modules"]
}